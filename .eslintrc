env:
    node: true
    es6: true

rules:
    brace-style: [2, "1tbs", {"allowSingleLine": true}]
    comma-style: [2, "last"]
    default-case: 2
    no-floating-decimal: 2
    no-multi-spaces: 0
    no-underscore-dangle: 0
    no-undefined: 2
    no-shadow: 0
    new-cap: 0
    radix: 2
    quotes: 0
    space-before-function-paren: [2, "never"]
    keyword-spacing: 2
    spaced-comment: [0, "always", { "exceptions": ["-", "#"]}]
    strict: [2, "never"]
    valid-jsdoc: [2, { prefer: { "return": "returns"}}]
    wrap-iife: 0
    comma-dangle: 0
    no-return-assign: 0
    dot-notation: [1, { "allowKeywords": true, "allowPattern": "^default$" }]
    no-undef: 2
    handle-callback-err: 2
    consistent-return: 0
    camelcase: 0

    # handling coffee-script peculiarities
    no-sequences: 0 # allow comma operator (coffee-script uses it)
    no-nested-ternary: 0
    curly: 0
    no-wrap-func: 0
    # coffee-script is dumb with try-catches; express middleware requires exact # of args, but we might not call next
    no-unused-vars: [2, {"varsIgnorePattern": "^error[0-9]?$", "argsIgnorePattern": "^IGNORED"}]
    no-unused-expressions: [0, { "allowTernary": true }]
    yoda: 0

    no-path-concat: 1
    guard-for-in: 1

globals:
    "describe": true
    "xdescribe": true
    "Set": true
    "xit": true
    "it": true
    "before": true
    "after": true
    "expect": true
    "failOnError": true
    "testHelpers": true
    "ok": true
    "beforeEach": true
    "afterEach": true
    "sinon": true
    "Map": true


